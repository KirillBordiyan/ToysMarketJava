<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>src/main/java/org/example/data/datafile.txt</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="FILE" />
    </root>
</configuration>